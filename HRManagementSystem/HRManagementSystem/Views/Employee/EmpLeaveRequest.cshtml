@model IEnumerable<HRManagementSystem.Models.LeaveRequest>
@{
    ViewData["Title"] = "Leave Requests";
    Layout = "_EmployeeLayout";
}

@section Style {
    <link href="~/css/Leave.css" rel="stylesheet" asp-append-version="true" />
}

<div>
    <div class="flex">
        <h2>Leave Requests</h2>

            <a asp-controller="Employee" asp-action="CreateLeaveReq" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
            + New Leave Request
        </a>
    </div>

    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Leave Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Leave Hours</th>
                <th>Reason</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.LeaveType</td>
                    <td>@request.LeaveDate</td>
                    <td>@request.StartTime</td>
                    <td>@request.EndTime</td>
                    <td>@request.LeaveHours</td>
                    <td>@(string.IsNullOrEmpty(request.Reason) ? "N/A" : request.Reason)</td>
                    <td>
                        <span class="badge @(request.Status == "Approved" ? "bg-success" : request.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                            @request.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>