@model HRManagementSystem.Models.VaccationRequest
@{
    ViewData["Title"] = "Vacation Requests";
    Layout = "_EmployeeLayout";
}

@* <h1 style="text-align: center; margin-top: 20px;"> *@
@*     Create Vacation Request *@
@* </h1> *@
<div class="container mt-4" style="margin-top:5vw !important;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header" style="background-color: #1f2732; color: white; margin-bottom:10px; padding-top:15px !important;">
                    <h4 class="text-center"><i class="bi bi-calendar-plus"></i> Create Vacation Request</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Employee" asp-action="CreateVacReq" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-card-list"></i> Vacation Type</label>
                                <select class="form-control" asp-for="VaccType">
                                    <option value="Family Vacation">Family Vacation</option>
                                    <option value="Annual Vaccation">Annual Vacation</option>
                                    <option value="Sick Vaccation">Sick Vacation</option>
                                    <option value="Maternity Vacation">Maternity Vacation</option>
                                    <option value="Unpaid Vaccation">Unpaid Vacation</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="VaccType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-calendar-event"></i> Start Date</label>
                                <input class="form-control" asp-for="StartDate" type="date" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-5">
                                <label class="form-label fw-bold"><i class="bi bi-calendar-check"></i> End Date</label>
                                <input class="form-control" asp-for="EndDate" type="date" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="VaccDays" />

                            @if (Model != null && Model.VaccType == "Other")
                            {
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-pencil-square"></i> Reason (Required for "Other")</label>
                                    <textarea class="form-control" asp-for="Reason" rows="3"></textarea>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Employee" asp-action="EmpVacRequest" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Requests
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-send"></i> Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">