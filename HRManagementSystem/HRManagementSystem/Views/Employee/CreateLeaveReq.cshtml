@model HRManagementSystem.Models.LeaveRequest
@{
    ViewData["Title"] = "Leave Requests";
    Layout = "_EmployeeLayout";
}

@* <h1 style="text-align: center; margin-top: 20px;"> Create Leave Request</h1> *@
<div class="container mt-4" style="margin-top:5vw !important;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header" style="background-color: #1f2732; color: white; margin-bottom:10px; padding-top:15px !important;">
                    <h4 class="text-center"><i class="bi bi-calendar-plus"></i> Create Leave Request</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Employee" asp-action="CreateLeaveReq" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-card-list"></i> Leave Type</label>
                                <select class="form-control" asp-for="LeaveType">
                                    <option value="Emergency Leave">Emergency Leave</option>
                                    <option value="Sick Leave">Sick Leave</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="LeaveType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="bi bi-calendar"></i> Leave Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                    <input class="form-control" asp-for="LeaveDate" type="date" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                                <span asp-validation-for="LeaveDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-clock"></i> Start Time
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-clock-history"></i></span>
                                    <input class="form-control" asp-for="StartTime" type="time" required />
                                </div>
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-5">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-clock"></i> End Time
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-clock-fill"></i></span>
                                    <input class="form-control" asp-for="EndTime" type="time" required />
                                </div>
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="LeaveHours" />

                            @if (Model != null && Model.LeaveType == "Other")
                            {
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-pencil-square"></i> Reason (Required for "Other")</label>
                                    <textarea class="form-control" asp-for="Reason" rows="3"></textarea>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Employee" asp-action="EmpLeaveRequest" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Requests
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-send"></i> Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">