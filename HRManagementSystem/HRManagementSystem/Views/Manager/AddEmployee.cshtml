@model HRManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "_ManagerLayout";
}
<div class="container" style="margin-top:3vw !important;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">

                <div class="card-header" style="background-color: #1f2732; color: white; margin-bottom:10px; padding-top:15px !important;">
                    <h4 class="text-center"><i class="fas fa-user-plus"></i> Add New Employee</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Manager" asp-action="AddEmployee" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fas fa-user"></i> Name</label>
                                <input type="text" asp-for="Name" class="form-control" required placeholder="Enter Full Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fas fa-briefcase"></i> Position</label>
                                <input type="text" asp-for="Position" class="form-control" required placeholder="Enter position" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fas fa-envelope"></i> Email</label>
                                <input type="email" asp-for="Email" class="form-control" required placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fa-solid fa-lock"></i> Password</label>
                                <input type="password" asp-for="PasswordHash" class="form-control" required placeholder="Enter password" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fas fa-building"></i> Department</label>
                                <input type="text" class="form-control" value="@ViewBag.DepartmentName" readonly />
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold"><i class="fas fa-image"></i> Profile Image</label>
                                <input type="file" asp-for="ProfileImage" name="ImageFile" class="form-control" />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-5">
                                <label class="form-label fw-bold"><i class="fas fa-map-marker-alt"></i> Address</label>
                                <input type="text" asp-for="Address" class="form-control" placeholder="Enter address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Manager" asp-action="ViewEmployees" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-plus"></i> Add Employee
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>