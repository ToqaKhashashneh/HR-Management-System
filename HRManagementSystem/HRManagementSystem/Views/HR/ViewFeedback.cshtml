@model IEnumerable<HRManagementSystem.Models.Feedback>

@{
    ViewData["Title"] = "View Feedback";
    Layout = "_HRLayout";
}
@section Style {
    <link href="~/css/Leave.css" rel="stylesheet" asp-append-version="true" />
}


<div class="flex">
    <h2>Feedbacks</h2>
    <a asp-controller="HR" asp-action="DownloadFeedbacksPDF" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
        Download Feedbacks as PDF
    </a>
</div>

<table class="table table-striped table-bordered shadow-lg rounded" >
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th class="text-center">
                <a style="color:white;" href="@Url.Action("ViewFeedbackSorted", new { sortOrder = ViewData["ReceivedAtSortOrder"]?.ToString() == "desc" ? "asc" : "desc" })">
                    @Html.DisplayNameFor(model => model.ReceivedAt)
                    @if (ViewData["ReceivedAtSortOrder"]?.ToString() == "asc")
                    {
                        <span>&#8659;</span><!-- سهم للأعلى للترتيب التصاعدي -->
                    }
                    else
                    {
                        <span>&#8657;</span><!-- سهم للأسفل للترتيب التنازلي -->
                        
                    }
                </a>
            </th>

           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ReceivedAt)
                </td>
            
            </tr>
        }
    </tbody>



</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>
