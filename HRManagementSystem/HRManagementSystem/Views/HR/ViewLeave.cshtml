@model IEnumerable<HRManagementSystem.Models.LeaveRequest>

@{
    ViewData["Title"] = "View Leave";
    Layout = "_HRLayout";
}
@section Style {
    <link href="~/css/Leave.css" rel="stylesheet" asp-append-version="true" />
}


<div class="flex">
    <h2>Leave Requests</h2>
    <a asp-controller="HR" asp-action="DownloadLeaveRequestsPDF" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
        Download Leave Requests as PDF
    </a>
</div>

<table class="table table-striped table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">@Html.DisplayNameFor(model => model.LeaveType)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.StartTime)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.EndTime)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.LeaveDate)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Reason)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Status)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Employee)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Status == "Approved")
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.LeaveType)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.LeaveDate)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Reason)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Status)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td class="text-center">@item.Employee.Name</td>

                </tr>
            }
        }
    </tbody>
</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>