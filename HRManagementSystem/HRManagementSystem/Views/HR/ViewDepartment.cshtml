@model IEnumerable<HRManagementSystem.Models.Department>

@{
    ViewData["Title"] = "View Department";
    Layout = "_HRLayout";
}

@section Style {
    <link href="~/css/Leave.css" rel="stylesheet" asp-append-version="true" />
}

<div class="flex">
    <h2>Departments</h2>

    <div>
        <a asp-controller="HR" asp-action="DownloadDepartmentsDataPDF" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
            Download Departments Data as PDF
        </a>
    <a asp-action="CreateDepartment" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
        + Add New Department
    </a>
    </div>
</div>

<table class="table table-striped table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
            
            </tr>
        }
    </tbody>
</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>
