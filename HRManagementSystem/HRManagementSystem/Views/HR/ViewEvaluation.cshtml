@model IEnumerable<HRManagementSystem.Models.Evaluation>

@{
    ViewData["Title"] = "View Evaluation";
    Layout = "_HRLayout";
}
@section Style {
    <link href="~/css/Leave.css" rel="stylesheet" asp-append-version="true" />
}


<div class="flex">
    <h2>Evaluations</h2>
    <a asp-controller="HR" asp-action="DownloadEvaluationsDataPDF" class="btn btn-primary" style="background-color: #1f2732; border: none !important; margin:3px 0px;">
        Download Evaluations Data as PDF
    </a>
</div>

<table class="table table-striped table-bordered shadow-lg rounded">
    <thead class="thead-dark">
        <tr id="HHH">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Employee)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.Comment)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.Status)
            </th>
          
            <th class="text-center">
                @Html.DisplayNameFor(model => model.DateEvaluate)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

               
              
                <td class="text-center">
                    @item.Employee.Name
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DateEvaluate)
                </td>
            
            </tr>
        }
    </tbody>
</table>


<style>


    #HHH {
        background-color: #1f2732;
        color: white;
    }
</style>
