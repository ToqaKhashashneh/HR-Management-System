@model HRManagementSystem.Models.Department

@{
    ViewData["Title"] = "Add Department";
    Layout = "_HRLayout";
}
<br />
<br />

<div class="row justify-content-center mt-4">
    <div class="col-md-6">

        <form asp-action="CreateDepartment" class="shadow-lg p-4 rounded" style="background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <h3 class="text-center" style="color: #1f2732; font-weight: bold; font-size: 1.8rem;">Add New Department</h3>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Department Name Field -->
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label" style="color: #1f2732; font-weight: 600;"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Department Name" 
                       style="border: 2px solid #1f2732; border-radius: 8px; padding: 12px 15px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Department Description Field -->
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label" style="color: #1f2732; font-weight: 600;"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description" 
                       style="border: 2px solid #1f2732; border-radius: 8px; padding: 12px 15px;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Add Department" class="btn btn-lg w-100"
                       style="background-color: #1f2732; color: white; border-radius: 8px; padding: 12px 0; font-weight: 600; transition: background-color 0.3s ease;" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
