@{
    ViewData["Title"] = "Accounts";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Options</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="~/img/logo22.png" asp-append-version="true" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #0000001a;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-image: url(../img/breadcrumbs.jpg);
        }

        .container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 320px;
            text-align: center;
            transition: 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            }

            .card img {
                width: 250px;
                height: 250px;
                object-fit: cover;
            }

        .card-content {
            padding: 20px;
            background: #1f2732;
        }

        .card h3 {
            margin-bottom:20px;
            font-size: 22px;
            color: #fff;
            font-weight: bold;

        }

        .card p {
            font-size: 14px;
            color: #fff;
            margin-bottom: 40px;
        }

        .login-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 80%;
            margin: 0 auto;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            color: white;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: #FF497C;
            /* background: #1f2732; */
            margin-bottom:20px;
        }

        .login-btn:hover {
            opacity: 0.9;
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

        .login-btn i {
            margin-right: 8px;
            font-size: 18px;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- HR card -->
        <div class="card">
            <img src="~/img/HR.png" alt="HR" width="200px !important">
            <div class="card-content">
                <h3>HR Login</h3>
                <p>Access HR management and <br />employee details.</p>
                <a href="@Url.Action("Login", "User", new { role = "HR" })" class="login-btn btn-hr">
                    <i class="fas fa-user-tie"></i> Login
                </a>
            </div>
        </div>

        <!-- Manager card -->
        <div class="card">
            <img src="~/img/manager.png" alt="Managers">
            <div class="card-content">
                <h3>Managers Login</h3>
                <p>Manage teams and oversee<br /> operations.</p>
                <a href="@Url.Action("Login", "User", new { role = "Manager" })" class="login-btn btn-managers">
                    <i class="fas fa-user-cog"></i> Login
                </a>
            </div>
        </div>

        <!--Employee card-->
        <div class="card">
            <img src="~/img/employee.png" alt="Employees">
            <div class="card-content">
                <h3>Employees Login</h3>
                <p>Access work schedules and personal<br /> info.</p>
                <a href="@Url.Action("Login", "User", new { role = "Employee" })" class="login-btn btn-employees">
                    <i class="fas fa-users"></i> Login
                </a>
            </div>
        </div>
    </div>

</body>
</html>


