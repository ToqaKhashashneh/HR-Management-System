@{
	ViewData["Title"] = "Password Reset";
	Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="~/img/logo22.png" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.css" asp-append-version="true">
    <style>
        body {
            display: flex;
            background-image: url(../img/breadcrumbs.jpg) !important;
            font-family: 'Poppins', sans-serif;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 500px;
            justify-content: center;
            align-items: center;
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #1f2732;
            }

        .btn {
            background: #FF497C;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            color: white;
            text-decoration: none;
            letter-spacing: 1px;
            box-shadow: 6px 6px 15px rgba(0, 0, 0, 0.1);
            padding: 12px 20px;
            /* margin: 0px 170px !important; */
            margin-top: 20px !important;
        }

            .btn:hover {
                opacity: 0.9;
                transform: scale(1.05);
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
                color: white;
                background: #FF497C;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <h2 class="fw-bolder">Password Reset</h2>
                <hr />
                <main class="col-lg-12">
                <form asp-action="ResetPasswordRequest" asp-controller="User" method="post" class="woocommerce-ResetPassword lost_reset_password text-center">
                        <p style="color:gray; text-align:left;" class="mb-4">Lost your password? Please enter your email address. You will receive a link to create a new password via email.</p>

                        <div class="form-group mb-3">
                            <input name="email" type="email" class="form-control p-3" placeholder="Enter your email" required />
                            <span for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send Reset Link" class="btn btn-primary" />
                        </div>
                </form>

                @if (ViewBag.Message != null)
                {
                    <p style="color:green;">@ViewBag.Message</p>
                }

                @if (ViewBag.Error != null)
                {
                   <p style="color:red;">@ViewBag.Error</p>
                }
                </main>
            </div>
        </div>
    </div>

</body>
</html>

