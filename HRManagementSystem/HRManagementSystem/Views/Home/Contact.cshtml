<section class="page_title ls s-py-50 corner-title ls invise overflow-visible">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Contact</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Contact
                    </li>
                </ol>
                <div class="divider-15 d-none d-xl-block"></div>
            </div>
        </div>
    </div>
</section>

<section class="ls s-pt-30 s-pb-100 s-pb-md-130 s-py-lg-100 contact2">
    <div class="divider-15 d-none d-xl-block"></div>
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }

        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="@Url.Action("Contact", "Home")" id="contact-form" class="needs-validation" novalidate>
                    <div class="row c-gutter-20">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="Name">Full Name <span class="required text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter your full name" required>
                                <span class="text-danger" asp-validation-for="Name"></span>
                                <div class="invalid-feedback">Please provide your full name.</div>
                            </div>
                            <div class="form-group">
                                <label for="Email">Email Address <span class="required text-danger">*</span></label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email address"  required>
                                <span class="text-danger" asp-validation-for="Email"></span>
                                <div class="invalid-feedback">Please provide a valid email address.</div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="Message">Message <span class="required text-danger">*</span></label>
                                <textarea class="form-control" asp-for="Message" rows="6" placeholder="Enter your message" required></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                                <div class="invalid-feedback">Please write your message.</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-maincolor">Send Message</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

<script>
    // Validate the form
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var form = document.getElementById('contact-form');
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }, false);
    })();
</script>

<style>
    /* Styling for the input fields */
    .form-control {
        border-radius: 5px;
        padding: 0.75rem;
        border: 1px solid #ced4da;
    }

    /* Styling for invalid feedback messages */
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }

    /* Green color for valid input fields */
    .form-control:valid {
        border-color: #28a745;
    }

    /* Red color for invalid input fields */
    .form-control:invalid {
        border-color: #ff497c; /* Updated color for invalid fields */
    }

    /* Styling for the submit button */
    .btn-maincolor {
        background-color: #ff497c; /* Updated button color */
        border-color: #ff497c; /* Updated button border color */
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-maincolor:hover {
            background-color: #e1426d; /* Darker shade for hover effect */
            border-color: #e1426d;
        }

    /* Custom alert box for success message */
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
        padding: 1rem;
        border-radius: 5px;
    }

</style>
